{
	"manifest_version": 2,
	"name": "Scroll to page bottom Extension",
	"description": "Infinite scroll to bottom of the page",
	"version": "0.1",
	"permissions": [
		"http://*/*",
		"https://*/*",
		"activeTab",
    "tabs"
		],

	"browser_action": {
		"default_title" : "AutoScroll to bottom"
	 },
	 
	"background" : {
		"scripts" : ["app.js" ]
	},

	"commands":{
		"scroll-bottom" :{
			"suggested_key":{
				"default": "Alt+W",
				"windows": "Alt+W"
			},

		"description" : "Infinite scroll to bottom of the page"
		}
	}

}
